CREATE DATABASE warisan_decode;

USE warisan_decode;

CREATE TABLE users (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100) NOT NULL,
  password VARCHAR(255) NOT NULL
);

CREATE TABLE states (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100) NOT NULL
);

INSERT INTO states (name) VALUES ('Malacca'), ('Penang'), ('Sabah'), ('Kelantan'), ('Sawarak'), ('Selangor'), ('Johor'), ('Perak'), ('Kedah'), ('Terengganu'), ('Negeri Sembilan'), ('Perlis'), ('Pahang');

CREATE TABLE checkpoints (
  id INT AUTO_INCREMENT PRIMARY KEY,
  state_id INT NOT NULL,
  checkpoint_number INT NOT NULL,
  cipher TEXT,
  answer TEXT,
  FOREIGN KEY (state_id) REFERENCES states(id)
);

INSERT INTO checkpoints (state_id, checkpoint_number, cipher, answer)
VALUES 
  (1, 1, NULL, NULL),
  (1, 2, NULL, NULL),
  (1, 3, NULL, NULL),
  (1, 4, NULL, NULL),
  (1, 5, NULL, NULL);

CREATE TABLE progress (
  id INT AUTO_INCREMENT PRIMARY KEY,
  user_id INT NOT NULL,
  state_id INT NOT NULL,
  checkpoint_id INT NOT NULL,
  badge_image VARCHAR(255),
  completed_at DATETIME DEFAULT CURRENT_TIMESTAMP,
  FOREIGN KEY (user_id) REFERENCES users(id),
  FOREIGN KEY (state_id) REFERENCES states(id),
  FOREIGN KEY (checkpoint_id) REFERENCES checkpoints(id)
);
